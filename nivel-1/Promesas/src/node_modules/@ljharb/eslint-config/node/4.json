{
	"extends": "./0.4",
	"env": {
		"es6": true,
		"es2017": true
	},
	"parserOptions": {
		"ecmaVersion": 2015
	},
	"rules": {
		"no-var": 2,
		"object-shorthand": [2, "always", {
			"avoidQuotes": true,
			"avoidExplicitReturnArrows": true
		}],
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"prefer-object-spread": 2,
		"prefer-rest-params": 2,
		"prefer-template": 2
	}
}
