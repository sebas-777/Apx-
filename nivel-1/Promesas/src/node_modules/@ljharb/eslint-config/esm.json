{
	"parserOptions": {
		"ecmaVersion": 2020,
		"allowReserved": false,
		"sourceType": "module"
	},
	"rules": {
		"comma-dangle": [2, {
			"arrays": "always-multiline",
			"objects": "always-multiline",
			"imports": "always-multiline",
			"exports": "always-multiline",
			"functions": "always-multiline"
		}],
		"dot-notation": [2, { "allowKeywords": true }],
		"// func-style": [0, "disabled pending https://github.com/eslint/eslint/issues/12829"],
		"func-style": 1,
		"// no-duplicate-imports": [0, "disabled pending https://github.com/eslint/eslint/issues/12758"],
		"no-duplicate-imports": 1,
		"object-shorthand": [2, "always", {
			"avoidQuotes": true,
			"avoidExplicitReturnArrows": true
		}]
	}
}
